{
  "name": "unlike-dev",
  "version": "1.0.0",
  "homepage": "https://github.com/andykenward/unlike.dev#readme",
  "bugs": {
    "url": "https://github.com/andykenward/unlike.dev/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andykenward/unlike.dev.git"
  },
  "license": "ISC",
  "author": "@andykenward",
  "type": "module",
  "scripts": {
    "lint": "eslint --cache --cache-location '.cache/eslint/' .",
    "lint:ls": "DEBUG=eslint:eslint pnpm run lint",
    "prepare": "husky",
    "prettier": "prettier . --write --cache --cache-location '.cache/prettier/'",
    "serve": "node ./server.js --use-system-ca",
    "serve:deno": "cd ./server-test && deno run --allow-net --no-check --cached-only -P=read-data server.ts ",
    "test": "playwright test",
    "test:site": "PLAYWRIGHT_TEST_BASE_URL='https://unlike.dev' pnpm exec playwright test",
    "test:ui": "pnpm run test --ui",
    "test:ui:container": "xvfb-run pnpm run test:ui --ui-host=0.0.0.0 --ui-port=8080"
  },
  "dependencies": {
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@playwright/test": "1.57.0",
    "@types/node": "24.10.1",
    "@typescript-eslint/parser": "8.48.0",
    "eslint": "9.39.1",
    "eslint-plugin-astro": "1.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "2.4.0",
    "husky": "9.1.7",
    "koa": "3.1.1",
    "koa-static": "5.0.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-packagejson": "2.5.20",
    "prettier-plugin-tailwindcss": "0.7.2"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": "^24.10.0",
    "pnpm": "^10.12.4"
  }
}
