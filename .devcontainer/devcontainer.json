// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & TypeScript",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "build": {
    "dockerfile": "DockerFile"
  },
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "ohmyzsh": "sed -i '/^ZSH_THEME/c\\ZSH_THEME=\"bira\"' ~/.zshrc",
    "mkcert": "mkcert -install && mkcert localhost 127.0.0.1 ::1 -cert-file localhost.pem -key-file localhost-key.pem",
    "pnpm": "pnpm i && pnpm exec playwright install --with-deps"
  },

  "updateContentCommand": {
    "pnpm": "rm -rf .cache && pnpm i",
    "deno": "cd server-test && deno install --quiet"
  },

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-playwright.playwright",
        "prettier.prettier-vscode",
        "redhat.vscode-yaml",
        "denoland.vscode-deno"
      ],
      "mcp": {
        "servers": {
          "playwright": {
            "command": "pnpx",
            "args": ["@playwright/mcp"]
          }
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": "xvfb,xauth,libnss3-tools"
    },
    "ghcr.io/devcontainers-extra/features/mkcert:1": {}
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
